<h1>New User</h1>

<%= form_tag(:controller => "users", :action => "create") do %>
    <%= label_tag("Name:") %><br />
    <%= text_field "user", "name" %><br />
    <%= label_tag("Email:") %><br />
    <%= text_field "user", "email" %><br />
    <%= label_tag("Password:") %><br />
    <%= text_field "user", "password" %><br />
    <%= label_tag("Contact No:") %><br />
    <%= text_field "user", "contact_no" %><br />
    <%= label_tag("Address:") %><br />
    <%= text_area "user", "address" %><br />
    <%= submit_tag("Submit") %><br />
<% end %><br />

<%= render 'form' %> <br />

<%= link_to 'Back', users_path %>
